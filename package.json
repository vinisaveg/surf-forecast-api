{
  "name": "surf-forecast-api",
  "version": "1.0.0",
  "description": "A surf forecast Nodejs API built with love and best practices",
  "main": "index.js",
  "repository": "https://github.com/vinisaveg/surf-forecast-api.git",
  "author": "vinisaveg / waldemarnt",
  "license": "MIT",
  "scripts": {
    "build": "rm -r build & tsc",
    "dev": "tsnd --transpile-only --ignore-watch node_modules --respawn src/index.ts | pino-pretty -c",
    "start": "yarn build && node build/src/index.js",
    "lint": "eslint ./src ./tests --ext .ts",
    "lint:fix": "eslint ./src ./tests --ext .ts --fix",
    "prettier:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts tests/**/*.ts",
    "test": "yarn test:unit & yarn test:functional",
    "test:functional": "jest --projects ./tests --runInBand",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.38",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-pino-logger": "^4.0.2",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.170",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.5",
    "@types/nock": "^11.1.0",
    "@types/node": "^15.12.2",
    "@types/pino": "^6.3.8",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "nock": "^13.1.0",
    "pino-pretty": "^5.0.2",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validator": "3.16.1",
    "express-pino-logger": "^6.0.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongoose": "^5.12.13",
    "pino": "^6.11.3",
    "swagger-ui-express": "^4.1.6"
  }
}
